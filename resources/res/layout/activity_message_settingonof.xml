            <TextView android:textSize="18dp" android:textColor="@color/colorBlack" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="On Off Message Setting"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:textSize="16dp" android:textColor="@color/colorWhite" android:gravity="center" android:layout_gravity="center" android:id="@+id/btnon" android:background="@drawable/button_bg_capsule" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="10dp" android:text="Message Setting is On" android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
